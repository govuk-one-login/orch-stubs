{
  "compilerOptions": {
    "module": "node16",
    "lib": ["es2023"],
    "target": "es2022",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "dist",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["@types", "node_modules/@types"],
    "types": ["node", "jest"],
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/tests", "coverage", "src/**/**/tests"]
}
